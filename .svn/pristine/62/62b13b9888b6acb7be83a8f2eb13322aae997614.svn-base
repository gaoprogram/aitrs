@import "variable.styl"

.mg-30
  margin 30px
.marginT20
  margin-top 20px
.marginT30 
  margin-top 30px
.marginT40
  margin-top 40px

// 清除浮动
.clearfix 
  &::after 
    display block
    content ''
    width 100%
    height 0
    clear both
// 左浮动
.lt
  float left

// 右浮动
.rt
  float right
//文字居中
.center
  text-align center
// 文字一行打省略号
.ellipsis1
  overflow hidden
  text-overflow: ellipsis
  white-space: nowrap

// 文字两行打省略号
.ellipsis2
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical

.el-switch__core:after {
  content: "";
  position: absolute;
  top: 1px;
  left: 1px;
  border-radius: 100%;
  transition: all .3s;
  width: 16px;
  height: 16px;
  background-color: #fff;
}

.el-switch.is-checked .el-switch__core:after {
  left: 100%;
  margin-left: -17px;
}

.table-design-container
  .el-scrollbar__wrap
    overflow-x hidden!important

.launch-container
  .el-scrollbar__wrap
    overflow-x: hidden !important

.el-dialog
  max-height 70vh
  overflow-y auto
  .el-dialog__footer
    text-align center

.el-dialog.is-fullscreen {
  max-height 100%
  overflow: auto;
}

input::-ms-clear{
  display: none;
}

input::-webkit-search-cancel-button{
  display: none;
}
